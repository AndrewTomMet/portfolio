        <div class="land-section__img-box">
            <img src="{{ asset('img/land-medicine/p5.jpg') }}" alt="" class="land-section__img land-section__img--desk">
            <img src="{{ asset('img/land-medicine/p5_mobile.jpg') }}" alt="" class="land-section__img land-section__img--mob">
