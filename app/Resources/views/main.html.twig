        <script type="text/javascript" src="{{ asset('vendor/jquery/jquery-1.4.4.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('vendor/jquery-ui/jquery-ui-1.8.9.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.stf.carousel.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.wresize.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.mousewheel.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.main.js') }}"></script>
#}
