{% extends 'StfalconBlogBundle::layout.html.twig' %}
{% block title %}{% trans %}Блог{% endtrans %} | {{ parent() }}{% endblock %}
{% block additional %}
    <link rel="canonical" href="{{ url('blog') }}" />
{% endblock additional %}
{% block content_wrapper %}
    {{ parent() }}
    {% if posts %}
        {% include 'StfalconBlogBundle:Post:_posts.html.twig' with {'posts': posts} %}

        {{ knp_pagination_render(posts) }}
    {% endif %}

    <button id="scroll-top" class="button-up scroll-to-top"></button>
{% endblock %}
{% block after_body %}
    {{ render(controller('ApplicationDefaultBundle:Widgets:hireUs')) }}
{% endblock %}
