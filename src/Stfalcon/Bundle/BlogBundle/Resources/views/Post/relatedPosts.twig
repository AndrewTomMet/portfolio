<h3 class="post-heading">{{ 'Похожие статьи'|trans }}</h3>
<div class="wrap_related_posts">
    <ul class="related_posts">
        {% for post in related_posts %}
            <li>
                <a href="{{ path('blog_post_view', { 'slug': post.slug }) }}#more">
                    <div class="wrap_img">
                        <div class="container_img">
                            {{ get_post_first_image(post, '', app.request.host) }}
                        </div>
                    </div>
                    {% set title = post.title %}
                    {% if title is empty %}
                        {% for translate in post.translations %}
                            {% if translate.locale == 'en' and translate.field == 'title' %}
                                {% set title = translate.content %}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    <h3>{{ title }}</h3>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
