<ul>
    {% for post in posts %}
        {% if post.previewMode != true or is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('blog_post_view', { 'slug': post.slug }) }}"><h4>{{ post.title }}</h4></a>
                <time>{{ post.created|localizeddate('long', 'none', app.request.locale) }}</time>
            </li>
        {% endif %}
    {% endfor %}
</ul>