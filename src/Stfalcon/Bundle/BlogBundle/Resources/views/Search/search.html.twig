<form id="search-form" action="{{ path('ajax_search') }}">
    {{ form_row(form.searchPhrase) }}
    {{ form_rest(form) }}
</form>

<div id="search-results"></div>

<script type="text/template" id="search-template">
    <div class="search-item">
        <a href="">
            <div>
                <img class="preview-image" src="<%= imagePreview %>" alt="<%= imageAlt %>" />
            </div>

            <p class="title"><%= title %></p>
            <p class="text"><%= text %></p>
        </a>
    </div>
</script>

