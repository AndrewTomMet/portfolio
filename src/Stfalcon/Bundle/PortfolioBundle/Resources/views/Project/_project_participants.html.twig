<section class="work-on-project">
    <h2>{{ 'Над проектом работали'|trans }}:</h2>
    <ul class="team-list  team-list-small">
        {% if project.participants | length %}
            {% for participant in project.participants %}
                <li>
                    {% if participant.avatarName %}
                        <img src="{{ vich_uploader_asset(participant, 'avatar') | apply_filter('avatar_small') }}" alt="{{ participant.firstname ~ ' ' ~ participant.lastname }}" />
                    {% endif %}
                    <span>{{ participant.firstname ~ ' ' ~ participant.lastname }}</span>

                    <p>{{ participant.position }}</p>
                </li>
            {% endfor %}
        {% elseif participants is defined and participants is not empty %}
            {% for participant in participants %}
                <li>
                    {% if participant.user.avatarName %}
                        <img src="{{ vich_uploader_asset(participant.user, 'avatar') | apply_filter('avatar_small') }}" alt="{{ participant.user.firstname ~ ' ' ~ participant.user.lastname }}" />
                    {% endif %}
                    <span>{{ participant.user.firstname ~ ' ' ~ participant.user.lastname }}</span>

                    {% if participant.positions %}
                        <p>{{ participant.positions }}</p>
                    {% else %}
                        <p>{{ participant.user.position }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        {% endif %}
    </ul>
</section>
