<section class="amount-projects">
    <div class="projects-counter">
        {% set lastYear = years|last %}
        <span class="years-count">{{ lastYear.counter }}</span><span>+</span>
        <p>{{ "проект мы запустили к концу|проекта мы запустили к концу|проектов мы запустили к концу"|transchoice(lastYear.counter) }} <time id="view-year">{{ lastYear.year }}</time> {{ "года"|trans }}</p>
    </div>
    <div class="year-slider-wrapp">
        <div id="year-slider"></div>
        <ul>
            {% for year in years %}
            <li data-val="{{ year.counter }}">{{ year.year }}</li>
            {% endfor %}
        </ul>
    </div>
</section>
