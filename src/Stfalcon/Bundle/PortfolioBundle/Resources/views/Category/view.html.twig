{% extends '::layout.html.twig' %}

{% block title %}{{ category.name }} | {{ parent() }}{% endblock %}

{% block additional %}
    <link rel="canonical" href="{{ url('portfolio_category_view', {'slug': category.slug}) }}" />
{% endblock additional %}

{% block content_wrapper %}
    <section>
        <h2>{{ category.name }}</h2>
        <ul class="projects">
            {% for project in projects %}
                {% include 'StfalconPortfolioBundle:Project:_projects_list_item.html.twig' with {'project':project, 'category': project.categories.first} %}
            {% endfor %}
        </ul>
    </section>
    <nav class="pagination">
        {{ knp_pagination_render(projects) }}
    </nav>
{% endblock %}