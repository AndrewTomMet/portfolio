{% extends 'StfalconBlogBundle::layout.html.twig' %}

{% block title %}{% trans %}Вакансии{% endtrans %}{{ parent() }}{% endblock %}

{% block additional %}
    <link rel="canonical" href="{{ url('jobs_list') }}" />
{% endblock additional %}

{% block content_wrapper %}
    {{ parent() }}
    <div class="team-image" style="text-align: center">
        <img src="{{ asset('assets/img/team.jpg') }}" alt="Приглашаем в нашу команду">
        <h2 class="header-title">Приглашаем в нашу команду</h2>
        <p class="header-sub-title">У нас большой и уютный офис, дружый колектив и современные технологии в работе</p>
    </div>
    {% if jobs %}
        {% include 'ApplicationDefaultBundle:Jobs:_jobs.html.twig' with {'jobs': jobs} %}

        {{ knp_pagination_render(jobs) }}
    {% endif %}

    <button id="scroll-top" class="button-up scroll-to-top"></button>
{% endblock %}

