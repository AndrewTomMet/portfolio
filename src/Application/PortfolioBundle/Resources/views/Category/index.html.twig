{% extends 'PortfolioBundle::layout.html.twig' %}

{% block content %}
    <h4>Categories list</h4>

    {% if categories %}
        <ul>
            {% for category in categories %}
                <li>
                    <a href="{{ path('portfolioCategoryView', { 'id': category.id }) }}">
                        {{ category.name }}
                    </a>
                    (<a href="{{ path('portfolioCategoryEdit', { 'id': category.id }) }}">Edit Category</a>
                    / <a href="{{ path('portfolioCategoryDelete', { 'id': category.id }) }}">Delete Category</a>)
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="info">
            List of categories is empty
        </div>
    {% endif %}
{% endblock %}